{
  "name": "jest-text-transformer",
  "version": "1.0.4",
  "description": "text file transformer to load text file in test files",
  "author": "janouma",
  "license": "ISC",
  "main": "src/index.js",
  "files": [
    "src/index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janouma/jest-text-transformer.git"
  },
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "test": "jest"
  },
  "pre-commit": [
    "lint"
  ],
  "standard": {
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.txt$": "./src/index.js"
    }
  },
  "engines": {
    "node": ">=14.15",
    "npm": ">=6.14.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^28.1.0",
    "pre-commit": "^1.2.2",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
